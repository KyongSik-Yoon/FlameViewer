<idea-plugin>
    <id>com.github.com.kornilovaL</id>
    <name>java-profiling-plugin</name>
    <version>0.0.1</version>

    <description><![CDATA[
      Java Profiling Plugin<br>
    ]]></description>

    <change-notes><![CDATA[
      Release 0.0.1: Initial release.<br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="162"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <httpRequestHandler implementation="com.github.kornilova_l.server.ProfilerHttpRequestHandler"/>
        <executor implementation="com.github.kornilova_l.plugin.execution.ProfilerExecutor"/>
        <programRunner implementation="com.github.kornilova_l.plugin.execution.ProfilerProgramRunner"/>
    </extensions>

    <actions>
        <group id="java-profiling-plugin.Menu" text="Profiler" description="">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="java-profiling-plugin.server" class="com.github.kornilova_l.server.ShowProfilingResultsAction"
                    text="Show Results" description=""/>
            <action class="com.github.kornilova_l.plugin.config_dialog.ShowProfilerDialogAction"
                    id="flamegraph-profiler.ShowProfilerDialog" text="Show Dialog"/>

        </group>
        <group>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <action id="ToggleMethodGutterIcon" class="com.github.kornilova_l.plugin.gutter.ToggleMethodGutterIconAction"
                    text="Add/Remove method from Profiler Config"/>
        </group>
    </actions>
    <project-components>
        <component>
            <interface-class>com.intellij.openapi.components.PersistentStateComponent</interface-class>
            <implementation-class>com.github.kornilova_l.plugin.config.ConfigStorage</implementation-class>
        </component>
        <component>
            <interface-class>com.github.kornilova_l.plugin.gutter.LineMarkerProjectComponent</interface-class>
            <implementation-class>com.github.kornilova_l.plugin.gutter.LineMarkerProjectComponent</implementation-class>
        </component>
        <component>
            <interface-class>com.github.kornilova_l.plugin.gutter.LineMarkersHolder</interface-class>
            <implementation-class>com.github.kornilova_l.plugin.gutter.LineMarkersHolder</implementation-class>
        </component>
    </project-components>

</idea-plugin>